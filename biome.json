{
	"$schema": "https://biomejs.dev/schemas/2.4.1/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noAssignInExpressions": "off",
				"useIterableCallbackReturn": "off",
				"noControlCharactersInRegex": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"complexity": {
				"noStaticOnlyClass": "off",
				"noUselessLoneBlockStatements": "off"
			}
		}
	},
	"files": {
		"includes": ["src/**", "tests/**/*.ts", "*.json", "*.ts"]
	}
}
