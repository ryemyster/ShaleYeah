# SHALE YEAH Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# LLM Integration (Required for AI agents)
# ==========================================
# Get Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key

# Get OpenAI API key from: https://platform.openai.com/api-keys  
OPENAI_API_KEY=your-openai-api-key

# LLM Provider: "claude" or "openai" (defaults to claude)
LLM_PROVIDER=claude

# ==========================================
# Pipeline Configuration
# ==========================================
# Pipeline mode: "demo", "production", "batch", "research" (auto-detected if not set)
PIPELINE_MODE=

# Run identifier (auto-generated if not set)
RUN_ID=

# Output directory (defaults to ./data/outputs/${RUN_ID})
OUT_DIR=

# Pipeline goal (defaults to tract_eval)
PIPELINE_GOAL=tract_eval

# ==========================================
# Optional: SIEM Integration Hooks
# ==========================================
# Splunk HTTP Event Collector
SPLUNK_HEC_TOKEN=

# Microsoft Sentinel
SENTINEL_BEARER=

# Elastic Search
ELASTIC_API_KEY=

# Palo Alto Cortex
CORTEX_API_KEY=

# ==========================================
# Optional: GIS Integration Hooks  
# ==========================================
# ArcGIS Online token
ARCGIS_TOKEN=

# QGIS server endpoint
QGIS_SERVER_URL=

# ==========================================
# Optional: Mining Software Integration
# ==========================================
# Leapfrog API endpoint
LEAPFROG_API_URL=

# Surpac server
SURPAC_SERVER=

# ==========================================
# Development Settings
# ==========================================
# Node environment: "development", "production", "test" (usually set by npm scripts)
NODE_ENV=development

# Log level: "debug", "info", "warn", "error"
LOG_LEVEL=info

# Enable development mode features (auto-enabled for NODE_ENV=development)
DEV_MODE=false

# ==========================================
# Agent OS Kernel Settings
# ==========================================
# Enable role-based permission gates (default: false — all access allowed)
KERNEL_AUTH_ENABLED=false

# Enable audit trail logging (default: true — logs to data/audit/)
KERNEL_AUDIT_ENABLED=true

# Audit log directory (JSONL files, one per day)
KERNEL_AUDIT_PATH=data/audit

# Default response detail level: "summary", "standard", "full"
KERNEL_DEFAULT_DETAIL=standard

# Max parallel tool executions in scatter-gather
KERNEL_MAX_PARALLEL=6

